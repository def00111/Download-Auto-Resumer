{
  "manifest_version": 3,
  "name": "Download Auto Resumer",
  "version": "1.4",
  "description": "Automatically resume interrupted downloads",
  "icons": {
    "16": "icons/on-16.png",
    "32": "icons/on-32.png",
    "48": "icons/on-48.png",
    "64": "icons/on-64.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "downloads",
    "alarms",
    "storage",
    "offscreen",
    "power"
  ],
  "action": {
    "default_icon": {
      "16": "icons/off-16.png",
      "32": "icons/off-32.png",
      "48": "icons/off-48.png",
      "64": "icons/off-64.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
